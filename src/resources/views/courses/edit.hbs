<div class='mt-4'>
    <h3>Cập nhật Khóa học</h3>

    <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input
                type='text'
                class='form-control'
                id='name'
                placeholder='Tên khóa học'
                value='{{course.name}}'
                name='name'
            />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <textarea
                type='text'
                class='form-control'
                id='description'
                placeholder='Mô tả khóa học'
                name='description'
            >{{course.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoId'>VideoId</label>
            <input
                type='text'
                class='form-control'
                id='videoId'
                placeholder='VideoId'
                value='{{course.videoId}}'
                name='videoId'
            />
        </div>
        <div class='form-group'>
            <label for='level'>Cấp độ khóa học</label>
            <input
                type='text'
                class='form-control'
                id='level'
                placeholder='Cấp độ khóa học'
                value='{{course.level}}'
                name='level'
            />
        </div>

        <button type='submit' class='btn btn-primary'>Lưu lại</button>
    </form>
</div>